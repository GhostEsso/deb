generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String    @id @default(uuid())
  email                     String    @unique
  role                      UserRole  @default(CLIENT)
  phoneNumber               String?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  birthDate                 DateTime
  firstName                 String
  gender                    Gender?
  isVerified                Boolean   @default(false)
  lastName                  String
  password                  String
  verificationCode          String?
  verificationCodeExpiresAt DateTime?
  pushToken                 String?
  profilePicturePublicId    String?
  profilePictureUrl         String?
  bookings                  Booking[]
  stories                   Story[]

  @@index([email])
}

model Service {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float
  duration    Int
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  imageUrl    String?
  bookings    Booking[]

  @@index([isActive])
}

model Booking {
  id                 String        @id @default(uuid())
  date               DateTime
  status             BookingStatus @default(PENDING)
  cancellationReason String?
  notes              String?
  userId             String
  serviceId          String
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  service            Service       @relation(fields: [serviceId], references: [id])
  user               User          @relation(fields: [userId], references: [id])

  @@index([date, status])
  @@index([userId])
}

model Story {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  publicId  String
  user      User     @relation(fields: [userId], references: [id])

  @@index([expiresAt])
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REFUSED
  CANCELLED
  COMPLETED
}

enum UserRole {
  CLIENT
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
